<div>
	<h3>
		<p>{{category.name}}</p>
	</h3>
</div>

{{#each articles}}
	<div>
		<h2>{{title}}</h2>
		<p>{{content}}</p>
		<p>Published on: {{date_written}}</p>
	</div>

	<div>
		<p>Published by: {{username}}</p>
	</div>

	<div>
		<a href="/articles/edit/{{id}}">
			<strong>Edit Article</strong>
		</a>
		<br>
		<form action="/articles/{{id}}" method="POST">
			<input type="hidden" name="_method" value="DELETE">
			<button style="position: relative; top: 20px; color: blue; cursor: pointer">Delete Article</button>
		</form>
	</div>
{{/each}}

